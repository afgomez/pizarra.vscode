{
  "name": "Pizarra",
  "type": "dark",
  "colors": {
    // Base colors
    "editor.background": "#101216",
    "editor.foreground": "#d8d9db",

    // Cursor line line
    "editor.lineHighlightBackground": "#00000059",
    "editor.lineHighlightBorder": "#0000",

    // Gutter
    "editorGutter.background": "#1C1F25FF",
    "editorLineNumber.foreground": "#3e424b",

    "activityBarBadge.background": "#007acc",

    // Sidebar
    "sideBarTitle.foreground": "#bbbbbb",
    "sideBar.background": "#08090b",

    // Tabline
    "tab.activeForeground": "#d8d9db",
    "tab.inactiveBackground": "#08090b",
    "tab.inactiveForeground": "#64686f",

    // Terminal
    "terminal.background": "#08090b",
    "terminal.foreground": "#d8d9db",
    "terminalCursor.foreground": "#ffffff"
  },
  "tokenColors": [
    {
      "settings": {
        "foreground": "#eeffffff",
        "background": "#263238ff"
      }
    },

    // Comments
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#64686f"
      }
    },

    // Strings and chars
    {
      "name": "String",
      "scope": ["string"],
      "settings": {
        "foreground": "#97D633"
      }
    },

    // Constants:
    {
      "name": "Constant",
      "scope": [
        // numbers, booleans, ruby symbols, etc.
        "constant.numeric",
        "constant.language.boolean",
        "constant.language.symbol"
      ],
      "settings": {
        "foreground": "#D65191"
      }
    },

    // `this` / `self`
    {
      "name": "this",
      "scope": [
        // Javascript
        "variable.language.this",

        // Ruby
        "variable.language.self",

        // Python
        "variable.language.special.self",
        "variable.parameter.function.language.special.self"
      ],
      "settings": {
        "foreground": "#DD96B8"
      }
    },

    // Keywords
    {
      "name": "Keyword",
      "scope": [
        // Generic
        "keyword",

        // Javascript: const, let, var, class, function keywords
        "storage.type"
      ],
      "settings": {
        "foreground": "#D67133"
      }
    },

    // Identifiers: function, class and method names
    {
      "name": "Identifier",
      "scope": [
        // JS
        "meta.definition entity.name",
        "meta.class entity.name.type",

        // Ruby
        "meta.class.ruby entity.name",
        "meta.module.ruby entity.name",
        "meta.function.method entity.name",

        // Python
        "meta.class.python entity.name",
        "meta.function.python entity.name",

        // SCSS
        "meta.at-rule.function support.function",
        "meta.at-rule.mixin entity.name",

        // SASS
        "support.function.name entity.name"
      ],
      "settings": {
        "foreground": "#D6B233"
      }
    },

    // XML/HTML/JSX
    {
      "name": "XML Tag",
      "scope": ["entity.name.tag", "punctuation.definition.tag"],
      "settings": {
        "foreground": "#b4f6ff"
      }
    },

    {
      "name": "HTML Attribute",
      "scope": [
        "entity.other.attribute-name",
        "meta.tag.attributes keyword.operator.assignment",
        "meta.tag.attributes punctuation.section.embedded"
      ],
      "settings": {
        "foreground": "#b4f6ff"
      }
    },

    // CSS/SCSS/SASS
    {
      "name": "CSS Important",
      "scope": ["keyword.other.important"],
      "settings": {
        "foreground": "#D64933"
      }
    },

    // Markdown
    {
      "name": "Markup heading",
      "scope": ["markup.heading"],
      "settings": {
        "foreground": "#ffffff",
        "fontStyle": "bold"
      }
    },

    {
      "name": "Markup bold",
      "scope": ["markup.bold"],
      "settings": {
        "foreground": "#ffffff",
        "fontStyle": "bold"
      }
    },

    {
      "name": "Markup italic",
      "scope": ["markup.italic"],
      "settings": {
        "foreground": "#ffffff",
        "fontStyle": "italic"
      }
    },

    {
      "name": "Markup monospace",
      "scope": ["markup.raw", "markup.inline.raw"],
      "settings": {
        "foreground": "#ffffff"
      }
    },

    {
      "name": "Markup fenced code",
      "scope": ["markup.fenced_code punctuation.definition"],
      "settings": {
        "foreground": "#ffffff"
      }
    }
  ]
}
